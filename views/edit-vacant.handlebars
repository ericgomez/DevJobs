<main class="container">
  <form action="/vacancies/edit/{{vacant.url}}" method="post" class="default-form">
    <h3>General Information</h3>

    <div class="campo">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="React Developer" value="{{vacant.title}}" required>
    </div>

    <div class="campo">
      <label for="company">Company</label>
      <input type="text" name="company" placeholder="Company" value="{{vacant.company}}" required>
    </div>

    <div class="campo">
      <label for="location">Location</label>
      <input type="text" name="location" placeholder="Location" value="{{vacant.location}}" required>
    </div>

    <div class="campo">
      <label for="salary">Salary (USD)</label>
      <input type="text" name="salary" placeholder="$ 500 USD" value="{{vacant.salary}}" required>
    </div>

    <div class="campo">
      <label for="contract">Contract</label>
      <select name="contract">
        {{#typeContract vacant.contract}}
          <option value="" disabled selected>-- Select --</option>
          <option value="freelance">Freelance</option>
          <option value="fulltime">Full time</option>
          <option value="halftime">Half time</option>
          <option value="project">By project</option>
        {{/typeContract}}
      </select>
    </div>

    <h3>Job Description</h3>
    <div class="campo description">
      <label>Description</label>
      <input type="hidden" id="x" name="description" value="{{{vacant.salary}}}">
      <trix-editor input='x'></trix-editor>
    </div>

    <h3>Skills</h3>

    <ul class="list-skills">
      {{#selectSkills vacant.skills}}
      {{/selectSkills}}
    </ul>

    <div class="campo center-horizontal">
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Publish" class="btn btn-blue">
    </div>
  </form>
</main>